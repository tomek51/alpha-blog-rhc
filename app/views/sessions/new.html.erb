<h1 align="center"> Se Connecter</h1>

<div class="row center">
    <div class="col-sm-offset-2">
        <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
    
            <div class="form-group">
                <div class="col-sm-2 control-label">
                     <%= f.label :email %> 
                </div>
                <div class="col-sm-6">
                    <%= f.text_field :email, class: "form-control", placeholder: "Votre Email" %>   
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-2 control-label">
                     <%= f.label :password %> 
                </div>
                <div class="col-sm-6">
                    <%= f.password_field :password, class: "form-control", placeholder: "Votre mot de passe", autocomplete: "off" %>   
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-10">
                    <%= f.submit "Se Connecter", class: "btn btn-default" %>
                </div>
            </div>
        <% end %>
    </div>
</div>